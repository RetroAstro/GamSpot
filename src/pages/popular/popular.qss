page {
  background: #f6f6f6;
}

.container {
  min-height: 100vh;
}

.post-box {
  width: 100%;
  position: relative;
}

.post-box post:last-child > view {
  margin-bottom: 0rpx;
}

.container .loading-box {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #b8b8b8;
}

.container .loading-box.mask {
  background: #fff;
  color: #fff;
}

.container .empty {
  color: #8d8d8d;
  font-size: 28rpx;
  margin-top: 30rpx;
}
